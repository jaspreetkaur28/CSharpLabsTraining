<h1>  Edit A Customer</h1>
<hr /> 
<form method="POST">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="customer.CustomerID" type="text" class="form-control" id="CustomerID" placeholder="Name" />
    </div>
    <div class="form-group">
    <label>Name</label>
    <input asp-for="customer.ContactName" type="text" class="form-control" id="ContactName" placeholder="Name" />
    </div>
    <div class="form-group">
        <label>Company</label>
        <input asp-for="customer.CompanyName" type="text" class="form-control" id="CompanyName" placeholder="Company" />
    </div>
    <div class="form-group">
        <label>City</label>
        <input asp-for="customer.City" type="text" class="form-control" id="City" placeholder="City" />
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
</form>

