<h1>Roles</h1>
<hr />

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Role</th>
        <th>Edit | Delete</th>
    </tr>
    @foreach (var item in Model.RoleList)
    {
        <tr>
            <td>@item.RoleName</td>
            <td>
                <a asp-page="./EditRole" asp-route-id="@item.RoleID">Edit</a> |
                <a asp-page="./Role" onclick="return confirm('Are you sure you want to delete this item?');"
                   asp-page-handler="Delete" asp-route-id="@item.RoleID">Delete</a>
            </td>

        </tr>
    }

</table>

<form method="POST">
 
    <div class="form-group">
        <label>Name</label>
        <input asp-for="NewRole.RoleName" type="text" class="form-control" id="RoleName" placeholder="Role Name" />
    </div> 
    <button type="submit" class="btn btn-primary btn-lg">Add a new Role</button>
</form>