<h1>Roles</h1>
<hr />

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Role</th>
        <th>Edit | Delete</th>
    </tr>
    @foreach (var item in Model.SpecialisationList)
    {
        <tr>
            <td>@item.SpecialisationName</td>
            <td>
                <a asp-page="./EditSpecialisation" asp-route-id="@item.SpecialisationID">Edit</a> |
                <a asp-page="./Specialisation" onclick="return confirm('Are you sure you want to delete this item?');"
                   asp-page-handler="Delete" asp-route-id="@item.SpecialisationID">Delete</a>
            </td>

        </tr>
    }

</table>

<form method="POST">
 
    <div class="form-group">
        <label>Name</label>
        <input asp-for="NewSpecialisation.SpecialisationName" type="text" class="form-control" id="SpecialisationName" placeholder="SpecialisationName" />
    </div> 
    <button type="submit" class="btn btn-primary btn-lg">Add a new Specialisation</button>
</form>